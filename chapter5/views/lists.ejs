<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List | <%= listTitle %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light">

    <div class="container py-5">
        <h4 class="text-center mb-4 display-5 fw-bold"><%= listTitle %> Tasks List</h4>

        <div class="row g-3 mb-4">
            <% for(let i = 0; i < newListItems.length; i++){ %>
                <div class="col-12">
                    <div class="card shadow-sm task-card">
                        <!-- <div class="card-body d-flex align-items-center">
                            <input class="form-check-input me-3 task-checkbox" type="checkbox" id="task<%= i %>" data-index="<%= i %>">
                            <label class="form-check-label mb-0 flex-grow-1 task-label" for="task<%= i %>"><%= newListItems[i] %></label>
                        </div> -->
                        <div class="card-body d-flex align-items-center">
                            <input class="form-check-input me-3 task-checkbox" type="checkbox" id="task<%= i %>" data-index="<%= i %>">
                            <label class="form-check-label mb-0 flex-grow-1 task-label" for="task<%= i %>"><%= newListItems[i] %></label>
                        </div>

                    </div>
                </div>
            <% } %>
        </div>

        <form class="d-flex gap-2" action="/" method="post">
            <input class="form-control form-control-lg" type="text" name="newItem" placeholder="Add a new task..." autocomplete="off" required>
            <button class="btn btn-primary btn-lg" type="submit" name="submit" value="<%= listTitle %>">Add</button>
        </form>
    </div>

    <!-- Bootstrap JS (Optional for interactive features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS for line-through toggle -->
    <script>
        document.querySelectorAll('.task-checkbox').forEach((checkbox) => {
            checkbox.addEventListener('change', function() {
                const taskLabel = this.nextElementSibling;  // Get the label next to the checkbox
                if (this.checked) {
                    taskLabel.classList.add('completed');  // Add 'completed' class for checked tasks
                } else {
                    taskLabel.classList.remove('completed');  // Remove 'completed' class for unchecked tasks
                }
            });
        });
    </script>

</body>
</html>